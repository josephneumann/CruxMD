# Caddyfile for CruxMD production deployment
# Automatic HTTPS via Let's Encrypt

{$DOMAIN:app.cruxmd.ai} {
    # Auth API routes -> frontend (Next.js Better-Auth)
    handle /api/auth/* {
        reverse_proxy frontend:3000
    }

    # API routes -> backend
    handle /api/* {
        reverse_proxy backend:8000
    }

    # Health check endpoint -> backend
    handle /health {
        reverse_proxy backend:8000
    }

    # OpenAPI docs -> backend (disabled in production for security)
    # To enable for debugging, uncomment below:
    # handle /docs* {
    #     reverse_proxy backend:8000
    # }
    # handle /openapi.json {
    #     reverse_proxy backend:8000
    # }

    # Everything else -> frontend
    handle {
        reverse_proxy frontend:3000
    }

    # Logging
    log {
        output stdout
        format console
    }

    # Security headers (Caddy adds many by default, these are extras)
    header {
        # Strict Transport Security
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        # Prevent embedding in iframes
        X-Frame-Options "DENY"
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        # Content Security Policy
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self'; font-src 'self' data:; frame-ancestors 'none'"
    }
}
