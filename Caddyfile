# Caddyfile for CruxMD production deployment
# Automatic HTTPS via Let's Encrypt

{$DOMAIN:app.cruxmd.ai} {
    # Auth API routes -> frontend (Next.js Better-Auth)
    handle /api/auth/* {
        reverse_proxy frontend:3000
    }

    # Next.js proxy routes -> frontend (adds Bearer token from session)
    handle /api/patients {
        reverse_proxy frontend:3000
    }
    handle /api/patients/* {
        reverse_proxy frontend:3000
    }
    handle /api/chat {
        reverse_proxy frontend:3000
    }
    handle /api/chat/* {
        reverse_proxy frontend:3000
    }

    # All other API routes -> backend directly
    handle /api/* {
        reverse_proxy backend:8000
    }

    # Health check endpoint -> backend
    handle /health {
        reverse_proxy backend:8000
    }

    # OpenAPI docs -> backend (disabled in production for security)
    # To enable for debugging, uncomment below:
    # handle /docs* {
    #     reverse_proxy backend:8000
    # }
    # handle /openapi.json {
    #     reverse_proxy backend:8000
    # }

    # Everything else -> frontend
    handle {
        reverse_proxy frontend:3000
    }

    # Logging
    log {
        output stdout
        format console
    }

    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
    }
}
