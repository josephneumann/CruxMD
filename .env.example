# CruxMD Environment Configuration
# Copy to .env and fill in values: cp .env.example .env

# =============================================================================
# Database
# =============================================================================
DB_PASSWORD=change-me
DATABASE_URL=postgresql+asyncpg://postgres:${DB_PASSWORD}@localhost:5432/cruxmd

# =============================================================================
# Neo4j Knowledge Graph
# =============================================================================
NEO4J_PASSWORD=change-me

# =============================================================================
# Authentication (Better-Auth)
# =============================================================================
BETTER_AUTH_SECRET=generate-a-random-secret
DATABASE_URL_SYNC=postgresql://postgres:${DB_PASSWORD}@localhost:5432/cruxmd
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Admin seed user (created on first startup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me

# =============================================================================
# Email (Resend)
# =============================================================================
# Optional â€” if unset, verification emails are logged to console
RESEND_API_KEY=

# =============================================================================
# LLM
# =============================================================================
OPENAI_API_KEY=sk-...

# =============================================================================
# Deployment (production only)
# =============================================================================
DOMAIN=app.cruxmd.ai
DEBUG=false
